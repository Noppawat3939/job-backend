generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  role        Role
  active      Boolean?
  firstName   String?
  lastName    String?
  companyName String?
  industry    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  super_admin
  admin
  employer
  user
}
